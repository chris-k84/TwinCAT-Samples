	remoteSocket: T_HSOCKET;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF NOT fbSocketClose.bBusy THEN
	fbSocketClose.hSocket := remoteSocket;
	Execute := _execute := true;
END_IF]]></ST>
